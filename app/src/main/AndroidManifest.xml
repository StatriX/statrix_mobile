<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.statrix">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PrimaryActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".GeneralStatistics"
            android:label="@string/toolbar_general_statistics"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".EveryDayStatistics"
            android:label="@string/toolbar_everyday_statistics"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".Admin"
            android:label="@string/toolbar_admin"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".BuyProduct"
            android:label="@string/toolbar_buy_product"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".FeedBack"
            android:label="@string/toolbar_feedback"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>